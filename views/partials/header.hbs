<header class="main-header">
    <nav class="navbar navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand"><b>{{site.title}}</b></a>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <i class="fa fa-bars"></i>
                </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">热门文章 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">最新发表</a></li>
                    <li><a href="#">最多评论</a></li>
                    {{#if session.passport.user}}
                        <li><a href="#">我发表的</a></li>
                    {{/if}}
                </ul>

            </div>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                   {{#if session.passport.user}}
                       <!-- User Account Menu -->
                       <li class="dropdown user user-menu">
                           <!-- Menu Toggle Button -->
                           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                               <!-- The user image in the navbar-->
                               <img src="/AdminLTE2/img/user2-160x160.jpg" class="user-image" alt="User Image">
                               <!-- hidden-xs hides the username on small devices so only the image appears. -->
                               <span class="hidden-xs">{{session.passport.user.username}}</span>
                           </a>
                           <ul class="dropdown-menu">
                               <!-- The user image in the menu -->
                               <li class="user-header">
                                   <img src="/AdminLTE2/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                   <p>
                                       {{session.passport.user.username}}
                                       <small><b>{{timeFromNow session.passport.user.created_time}}</b> 加入本站</small>
                                   </p>
                               </li>
                               <!-- Menu Body -->
                               <li class="user-body">
                                   <div class="row">
                                       <div class="col-xs-4 text-center">
                                           <a href="#">Followers</a>
                                       </div>
                                       <div class="col-xs-4 text-center">
                                           <a href="#">Sales</a>
                                       </div>
                                       <div class="col-xs-4 text-center">
                                           <a href="#">Friends</a>
                                       </div>
                                   </div>
                                   <!-- /.row -->
                               </li>
                               <!-- Menu Footer-->
                               <li class="user-footer">
                                   <div class="pull-left">
                                       <a href="/dashboard" class="btn btn-default btn-flat"> <i class="fa fa-dashboard"></i> 管理中心</a>
                                   </div>
                                   <div class="pull-right">
                                       <a href="/logout" class="btn btn-default btn-flat"> <i class="fa fa-sign-out"></i> 退出</a>
                                   </div>
                               </li>
                           </ul>
                       </li>
                   {{else}}
                       <li>
                           <a href="/login"> <i class="fa fa-sign-in"></i> 登录</a>
                       </li>
                       <li><a href="/join"> <i class="fa fa-asterisk"></i> 注册</a></li>
                   {{/if}}
                </ul>
            </div>
            <!-- /.navbar-custom-menu -->
        </div>
        <!-- /.container-fluid -->
    </nav>
</header>
