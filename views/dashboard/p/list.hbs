<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/dashboard"><i class="fa fa-dashboard"></i> 管理中心</a></li>
        <li class="active">文章管理</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">发表新文章</h3>
                </div>
                <form role="form" action="/dashboard/p/create" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="title">文章标题</label>
                            <input class="form-control" id="title" name="title" placeholder="输入标题" type="text">
                        </div>
                        <div class="form-group">
                            <label for="content">文章内容</label>
                            <textarea class="form-control " id="content" name="content" style="height: 34vh"></textarea>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="button" class="btn btn-github"><i class="fa fa-eye"></i> 预览 </button>
                        <button type="submit" class="btn btn-primary"> <i class="fa fa-location-arrow"></i> 发布</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
